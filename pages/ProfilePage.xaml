<Page x:Class="WpfDesingApp.pages.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfDesingApp.pages"
      mc:Ignorable="d" 
      d:DesignHeight="2000" d:DesignWidth="2200"
      Title="ProfilePage">

    <Grid>
        
        <StackPanel>
        <StackPanel>
            <Label Content="Ваш профиль" FontSize="36" Margin="0 20 0 0" HorizontalAlignment="Center" FontFamily="Tahoma"></Label>
        </StackPanel>
            
        <StackPanel Margin="20">
                <Border CornerRadius="10" Width="200" Height="600" HorizontalAlignment="Left" VerticalAlignment="Top" BorderBrush="Black" Background="White" Margin="20">
                    <Border CornerRadius="10" Width="200" Height="200" HorizontalAlignment="Left" BorderBrush="Black" BorderThickness="1" VerticalAlignment="Top">
                        <Border.Background>
                            <ImageBrush ImageSource="/images/CAPTCHA.png" Stretch="UniformToFill"/>
                        </Border.Background>

                    </Border>
                </Border>
                
        </StackPanel>
        </StackPanel>
    </Grid>
</Page>
