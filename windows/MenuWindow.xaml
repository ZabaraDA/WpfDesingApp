<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDesingApp.windows"
        xmlns:csclasses="clr-namespace:WpfDesingApp.csclasses" x:Class="WpfDesingApp.windows.MenuWindow"
        mc:Ignorable="d"
        Title="MenuWindow" Height="900" Width="1440"
        AllowsTransparency="True" Background="Transparent" 
        WindowStyle="None" WindowStartupLocation="CenterScreen"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        FontSize="24">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Border Grid.RowSpan="3" CornerRadius="5" Grid.Row="0" Background="Black" Grid.ColumnSpan="2"/>
        <Border Grid.RowSpan="3" CornerRadius="5" Grid.Row="0" Margin="1" Grid.ColumnSpan="2">
            <Border.Background >
                <LinearGradientBrush>
                    <GradientStop Color="#FFE8E8E8" Offset="0"/>
                    <GradientStop Color="#FFE4E4E4" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
        </Border>
        <Border Grid.Row="0" Grid.ColumnSpan="2" Margin="1">
            <Border.Background >
                <LinearGradientBrush>
                    <GradientStop Color="#FF636363" Offset="0"/>
                    <GradientStop Color="#FF5A5A5A" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
        </Border>
        <Grid Width="300" Grid.Row="1" HorizontalAlignment="Left" x:Name="ControlPanel">
            <StackPanel>
                <Button x:Name="ControlPanelButton" Click="ControlPanelButton_Click" HorizontalContentAlignment="Right">
                    <StackPanel Orientation="Horizontal">
                        <Path Fill="#FF2F2F2F" Stretch="Fill" Name="ControlPanelPath" Margin="10"></Path>
                    </StackPanel>
                </Button>
                <Button x:Name="ProfileButton" Click="ProfileButton_Click" HorizontalContentAlignment="Left">
                    <StackPanel Orientation="Horizontal">
                        <Path Fill="#FF2F2F2F" Stretch="Fill" Name="ProfilePath" Margin="20 10 10 10" Height="45" Width="40"></Path>
                        <Label Content="Профиль" VerticalContentAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button x:Name="RegistrationUserButton" Click="RegistrationUserButton_Click" HorizontalContentAlignment="Left">
                    <StackPanel Orientation="Horizontal">
                        <Path Fill="#FF2F2F2F" Stretch="Fill" Name="AccountPath" Margin="10" ></Path>
                        <Label Content="Аккаунты" VerticalContentAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button x:Name="UserButton" Click="UserButton_Click" HorizontalContentAlignment="Left">
                    <StackPanel Orientation="Horizontal">
                        <Path Fill="#FF2F2F2F" Stretch="Fill" Name="UserPath" Margin="10" ></Path>
                        <Label Content="Пользователи" VerticalContentAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button x:Name="AddProductsButton" Click="AddProductsButton_Click" HorizontalContentAlignment="Left">
                    <StackPanel Orientation="Horizontal">
                        <Path Fill="#FF2F2F2F" Stretch="Fill" Name="AddProductPath" Margin="10" ></Path>
                        <Label Content="Добавить товар" VerticalContentAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button x:Name="ProductsButton" Click="ProductsButton_Click" HorizontalContentAlignment="Left">
                    <StackPanel Orientation="Horizontal">
                        <Path Fill="#FF2F2F2F" Stretch="Fill" Name="ProductPath" Margin="10" ></Path>
                        <Label Content="Товары" VerticalContentAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button x:Name="SettingsButton" Click="SettingsButton_Click" HorizontalContentAlignment="Left">
                    <StackPanel Orientation="Horizontal">
                        <Path Fill="#FF2F2F2F" Stretch="Fill" Name="SettingsPath" Margin="10" ></Path>
                        <Label Content="Настройки" VerticalContentAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>
            <Button x:Name="ChangeAccountButton" Click="ChangeAccountButton_Click" VerticalAlignment="Bottom" HorizontalContentAlignment="Left" Grid.Row="1" Margin="0 0 0 10">
                <StackPanel Orientation="Horizontal">
                    <Path Fill="#FF2F2F2F" Stretch="Fill" Name="ChangePath" Margin="10 " Height="45" Width="55"></Path>
                    <Label Content="Сменить аккаунт" VerticalContentAlignment="Center"/>
                </StackPanel>
            </Button>
        </Grid>
        <StackPanel  HorizontalAlignment="Right" Margin="2" Orientation="Horizontal">
            <Button Background="{x:Null}" Width="58" HorizontalAlignment="Left" x:Name="CollapseButton" Click="CollapseButton_Click" VerticalContentAlignment="Bottom">
                <Path  Fill="#FF2F2F2F" Stretch="Fill" Name="HidePath" Margin="10" Height="5" VerticalAlignment="Bottom"></Path>
            </Button>
            <Button Background="{x:Null}" Width="58" HorizontalAlignment="Left" x:Name="FullScreenButton" Click="FullScreenButton_Click">
                <Path  Fill="#FF2F2F2F" Stretch="Fill" Name="WindowStatePath" Margin="10"></Path>
            </Button>
            <Button Background="{x:Null}" Width="58" HorizontalAlignment="Left" x:Name="ExitButton" Click="ExitButton_Click">
                <Path  Fill="#FF2F2F2F" Stretch="Fill" Name="ExitPath" Margin="12"></Path>
            </Button>
        </StackPanel>

        <Image Source="/images/logo.png" Height="50" Margin="10 2 90 2" HorizontalAlignment="Left" />
        <Label Content="Главное меню - Приветствие" VerticalAlignment="Center" 
               Foreground="White" 
               HorizontalContentAlignment="Center" Margin="180 0 180 0" 
               FontFamily="Bahnschrift SemiBold Condensed"/>
    </Grid>
</Window>
